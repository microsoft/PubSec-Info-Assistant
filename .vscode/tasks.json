{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pip install",
      "type": "shell",
      "command": "pip",
      "args": [
        "install",
        "-r",
        "${workspaceFolder}/requirements.txt"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "docker-compose up",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "up",
        "--build"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "docker-compose down",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "down"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}

#Explanation
#Pip Install: Task for installing Python dependencies.
#Docker Compose Up: Task for starting the Docker Compose services.
#Docker Compose Down: Task for stopping the Docker Compose services.