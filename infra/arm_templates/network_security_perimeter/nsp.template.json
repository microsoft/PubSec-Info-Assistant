{
    "$schema": "${arm_template_schema_mgmt_api}/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string"
        },
        "profileName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "tags": {
            "type": "object"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityPerimeters",
            "apiVersion": "2023-08-01-preview",
            "name": "[parameters('name')]",
            "location": "[parameters('location')]",
            "properties": {},
            "tags": "[parameters('tags')]"
        },
        {
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityPerimeters', parameters('name'))]"
            ],
            "type": "Microsoft.Network/networkSecurityPerimeters/profiles",
            "apiVersion": "2023-08-01-preview",
            "name": "[format('{0}/{1}', parameters('name'), parameters('profileName'))]",
            "location": "[parameters('location')]",
            "properties": {},
            "tags": "[parameters('tags')]"
        }
    ],
    "outputs": {
        "id": {
            "value": "[resourceId('Microsoft.Network/networkSecurityPerimeters',parameters('name'))]",
            "type": "string"
        },
        "profileId": {
            "value": "[resourceId('Microsoft.Network/networkSecurityPerimeters/profiles',parameters('name'),parameters('profileName'))]",
            "type": "string"
        }
    }
}